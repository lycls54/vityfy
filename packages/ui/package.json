{
  "name": "@cvcraft/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Modern React UI components for CVCraft - Next.js 15.3.3 + TypeScript 5.8.3 + Tailwind 4.1.8 ready",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist/**",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@cvcraft/core": "workspace:*",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "lucide-react": "^0.460.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "class-variance-authority": "^0.7.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "framer-motion": "^11.11.17"
  },
  "devDependencies": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "typescript": "^5.8.3",
    "tsup": "^8.3.5",
    "eslint": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "vitest": "^2.1.4",
    "@vitejs/plugin-react": "^4.3.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "jsdom": "^25.0.1",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "storybook": "^8.4.7",
    "tailwindcss": "^4.1.8",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.2"
  },
  "peerDependencies": {
    "react": ">=19.1.0",
    "react-dom": ">=19.1.0",
    "tailwindcss": ">=4.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "tailwindcss",
    "cvcraft",
    "nextjs-15",
    "typescript-5.8",
    "tailwind-4.1",
    "server-components",
    "modern-css",
    "framer-motion",
    "radix-ui",
    "accessible"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/cvcraft.git",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/your-org/cvcraft/issues"
  },
  "homepage": "https://github.com/your-org/cvcraft#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
